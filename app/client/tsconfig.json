{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2017",
    "noEmit": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}